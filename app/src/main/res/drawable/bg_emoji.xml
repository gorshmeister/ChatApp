<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <corners android:radius="10dp"/>
            <solid android:color="@color/color_background_secondary"/>
        </shape>
    </item>
    <item>
        <selector>
            <item android:state_selected="true" android:drawable="@drawable/bg_emoji_clicked" />
            <item android:drawable="@drawable/bg_emoji_not_clicked"/>
        </selector>
    </item>
</layer-list>