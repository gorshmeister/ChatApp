<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="WelcomeView">
        <attr name="android:textColor"/>
        <attr name="android:textSize"/>
        <attr name="img" format="color|reference"/>
        <attr name="imgTint" format="color"/>
        <attr name="text" format="string"/>
    </declare-styleable>
    
    <declare-styleable name="CircleImageView">
        <attr name="cl_foreground" format="reference"/>
        <attr name="cl_text_color" format="color"/>
        <attr name="cl_text" format="string"/>
        <attr name="cl_text_size" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="EmojiView">
        <attr name="ev_text" format="string"/>
        <attr name="ev_textColor" format="color"/>
        <attr name="ev_textSize" format="dimension"/>
        <attr name="ev_padding" format="dimension"/>
    </declare-styleable>

    <declare-styleable name="FlexboxLayout">
        <attr name="gap" format="dimension"/>
    </declare-styleable>

</resources>