<resources>
    <style name="Theme.MyApp" parent="Theme.MaterialComponents.Light.NoActionBar">

        <item name="android:windowBackground">#121212</item>

        <item name="colorPrimary">#2A9D8F</item>
        <item name="colorPrimaryVariant">?attr/colorPrimary</item>
        <item name="colorPrimaryDark">?attr/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="toolbarStyle">@style/Widget.MyApp.ToolBar</item>

        <item name="bottomSheetDialogTheme">@style/Widget.MyApp.BottomSheetDialog</item>

        <item name="bottomNavigationStyle">@style/Widget.MyApp.BottomNavigationView</item>

        <item name="tabStyle">@style/Widget.MyApp.TabLayout</item>

        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.MyApp.SmallComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.MyApp.LargeComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.MyApp.MediumComponent</item>
    </style>



    <style name="Theme.MyApp.Pro" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/mtrl_orange_500</item>
        <item name="colorPrimaryDark">@color/mtrl_orange_700</item>
        <item name="colorSecondary">@color/mtrl_green_500</item>
        <item name="colorOnSecondary">@android:color/white</item>
    </style>

    <style name="ThemeOverlay.MyApp" parent="Theme.MyApp">
        <item name="colorPrimary">@color/mtrl_orange_700</item>
    </style>

</resources>