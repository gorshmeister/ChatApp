<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingTop="16dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_people_avatar"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/ic_launcher_background"
        app:shapeAppearance="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"
        tools:src="@drawable/ic_launcher_background" />

    <View
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:background="@drawable/bg_people_indicator_on"
        android:layout_marginStart="43dp"
        android:layout_gravity="bottom"
        android:id="@+id/indicator"/>


    <TextView
        android:id="@+id/tv_people_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="74dp"
        android:layout_marginTop="8dp"
        android:text="@string/name_surname"
        android:textColor="@color/text_color"
        android:textSize="20sp"
        tools:text="@tools:sample/full_names" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_people_email"
        android:layout_gravity="bottom"
        android:layout_marginStart="74dp"
        android:layout_marginBottom="8dp"
        android:text="@string/email_example"
        android:textColor="#A1A1A1"
        android:textSize="16sp"
        tools:text="@string/email_example" />

</FrameLayout>