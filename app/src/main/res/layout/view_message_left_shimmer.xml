<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_msg_avatar"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginStart="12dp"
        android:background="@color/shimmer_color"
        android:layout_marginEnd="10dp"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/background"
        style="@style/CardViewLeft"
        app:cardBackgroundColor="@color/shimmer_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_msg_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22dp"
            android:text="asdfasdfsadfasdfasdfaadsfasdfadsfasdfsdfasdfadsf"
            android:maxWidth="220dp"
            android:textColor="@color/shimmer_color"
            android:textSize="16sp"
            />

    </androidx.cardview.widget.CardView>

</LinearLayout>